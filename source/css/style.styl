body
  background-color #ff4f4c

h1
  font-size 60px
  color #ffffff

p
  color #ffffff

a
  color #ffffff

a:hover
  text-decoration none

footer
  margin-top 100px

#logo
  margin-top 30px
  margin-bottom 30px
  width 500px

.about
  margin-top 15px

.adviceContainer
  max-width 960px

.first
  height 300px

.btn
  padding 15px
  background-color darkslategrey
  margin 30px
  font-family Helvetica Neue, Helvetica, Arial
  color #ffffff
